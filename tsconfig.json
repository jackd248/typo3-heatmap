{
  "compilerOptions": {
	"target": "ES2020",
	"module": "ES2020",
	"moduleResolution": "node",
	"lib": ["ES2020", "DOM", "DOM.Iterable"],
	"allowJs": false,
	"outDir": "./Resources/Public/JavaScript/dist",
	"rootDir": "./Resources/Private/TypeScript",
	"strict": true,
	"esModuleInterop": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"declaration": true,
	"declarationMap": true,
	"sourceMap": true,
	"removeComments": false,
	"noEmitOnError": true,
	"resolveJsonModule": true
  },
  "include": [
	"Resources/Private/TypeScript/**/*"
  ],
  "exclude": [
	"node_modules",
	"Resources/Public/JavaScript/dist",
	"**/*.test.ts"
  ]
}
